                        android:padding="5dp"
                        android:background="@drawable/border"
                        android:hint="13번" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/from4to8Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/border"
                        android:hint="04번" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"

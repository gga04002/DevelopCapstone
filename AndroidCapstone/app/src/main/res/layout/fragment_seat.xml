                        android:padding="5dp"
                        android:background="@drawable/border"
                        android:hint="11번" />

                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/border"
                        android:hint="12번" />

                    <TextView
                        android:id="@+id/tv13"
                        android:layout_width="wrap_content"

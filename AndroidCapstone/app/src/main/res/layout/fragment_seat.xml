                        />

                    <TextView
                        android:id="@+id/tv25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="25번"
                        android:padding="5dp"
                        android:background="@drawable/border"
                        />

                    <TextView
                        android:id="@+id/tv26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:padding="5dp"
                        android:hint="26번" />

                    <TextView
                        android:id="@+id/tv27"
                        android:layout_width="wrap_content"
